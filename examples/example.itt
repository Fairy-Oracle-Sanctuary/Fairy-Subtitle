<tt xmlns="http://www.w3.org/2006/04/ttaf1" xmlns:tts="http://www.w3.org/2006/04/ttaf1#styling" xmlns:ttm="http://www.w3.org/2006/04/ttaf1#metadata" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.w3.org/2006/04/ttaf1 http://www.w3.org/2006/04/ttaf1-ttml.xsd">
  <head>
    <styling>
      <style id="default" tts:fontFamily="Helvetica" tts:fontSize="24" tts:color="#FFFFFF" tts:backgroundColor="#000000" tts:textAlign="center" tts:fontWeight="normal" tts:fontStyle="normal"/>
